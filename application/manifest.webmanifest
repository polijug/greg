{
  "name": "greg",
  "id": "greg",
  "version": "1.1.0",
  "description": "greg",
  "lang": "en-US",
  "start_url": "/index.html",
  "icons": [
    {
      "src": "/assets/icons/icon-56-56.png",
      "type": "image/png",
      "sizes": "56x56"
    },
    {
      "src": "/assets/icons/icon-112-112.png",
      "type": "image/png",
      "sizes": "112x112"
    }
  ],

  "b2g_features": {
    "version": "1.1.0",
    "id": "greg",
    "core": true,
    "categories": ["utilities"],
    "type": "privileged",
    "display": "fullscreen",
    "theme_color": "#ffffff",

    "developer": {
      "name": "strukturart",
      "url": "https://github.com/strukturart/greg"
    },
    "dependencies": {
      "ads-sdk": "1.5.0"
    },
    "messages": [
      { "serviceworker-notification": "index.html" },
      "alarm",
      "activity"
    ],

    "activities": {
      "greg-oauth": {}
    },


      "serviceworker": {
        "script_url": "sw.js"
      },

    "permissions": {
      "desktop-notification": {
        "description": "Needed to fire system notifications"
      },
      "alarms": {
        "description": "Required to schedule alarms"
      },
      "mobiledata": {},
      "wifidata": {},
      "calllog": {},
      "device-storage:sdcard": {
        "description": "Read/Write from/to sd-card",
        "access": "readwrite"
      },
      "video-capture": {
        "description": "Reading Codes using the Camera"
      },
      "spatialnavigation-app-manage": {
        "navigator.spatialNavigationEnabled": false
      },
      "systemXHR": {
        "description": "Required to load remote content"
      }

    }
  }
}
